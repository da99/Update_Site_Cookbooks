#!/usr/bin/env ruby
# -*- ruby -*-
# 


require "Exit_Zero"

PREFIX = "chef-vendor-"

Exit_Zero( %!
  git branch
!).out.strip.split("\n").each { |raw|
  line = raw.strip
  name = line.sub(PREFIX, '')
  
  next unless line[ %r!^#{PREFIX}! ]
  next if !ARGV.empty? && !ARGV.include?(name)
  
  Exit_Zero "knife cookbook site install #{name}"
}


